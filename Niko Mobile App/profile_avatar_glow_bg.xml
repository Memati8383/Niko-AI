<?xml version="1.0" encoding="utf-8"?>
<!-- PREMIUM PROFİL AVATAR IŞIMA: Ultra-Premium Holographic Aura -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- BASE DEEP GLOW (Indigo) -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="100%"
                android:centerX="50%"
                android:centerY="50%"
                android:startColor="#266366f1"
                android:endColor="#00000000" />
        </shape>
    </item>

    <!-- ACCENT GLOW (Electric Cyan) -->
    <item android:top="10dp" android:bottom="10dp" android:left="10dp" android:right="10dp">
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="90%"
                android:centerX="30%"
                android:centerY="30%"
                android:startColor="#1A00FBFF"
                android:endColor="#00000000" />
        </shape>
    </item>

    <!-- INNER VIBRANCE (Violet) -->
    <item android:top="20dp" android:bottom="20dp" android:left="20dp" android:right="20dp">
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="80%"
                android:startColor="#228b5cf6"
                android:endColor="#00000000" />
        </shape>
    </item>

    <!-- GLASS RIM STROKE -->
    <item android:top="25dp" android:bottom="25dp" android:left="25dp" android:right="25dp">
        <shape android:shape="oval">
            <stroke
                android:width="1.5dp"
                android:color="#26FFFFFF" />
        </shape>
    </item>
</layer-list>