<?xml version="1.0" encoding="utf-8"?>
<!-- GEÇMİŞ KARTI: Premium glassmorphism efektli sohbet kartı arka planı -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Basılı durum -->
    <item android:state_pressed="true">
        <layer-list>
            <!-- Ana cam arka plan (basılı) -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#2000FBFF" />
                    <corners android:radius="20dp" />
                </shape>
            </item>
            <!-- Neon border -->
            <item>
                <shape android:shape="rectangle">
                    <stroke
                        android:width="1.5dp"
                        android:color="#5000FBFF" />
                    <corners android:radius="20dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    
    <!-- Normal durum -->
    <item>
        <layer-list>
            <!-- Ana cam arka plan -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#0DFFFFFF" />
                    <corners android:radius="20dp" />
                </shape>
            </item>
            <!-- Üst glow efekti -->
            <item android:left="1dp" android:right="1dp" android:top="1dp">
                <shape android:shape="rectangle">
                    <gradient
                        android:type="linear"
                        android:angle="180"
                        android:startColor="#12FFFFFF"
                        android:endColor="#00FFFFFF" />
                    <corners android:topLeftRadius="19dp" android:topRightRadius="19dp" />
                    <size android:height="30dp" />
                </shape>
            </item>
            <!-- İnce border -->
            <item>
                <shape android:shape="rectangle">
                    <stroke
                        android:width="1dp"
                        android:color="#12FFFFFF" />
                    <corners android:radius="20dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    
</selector>
