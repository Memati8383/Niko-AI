<?xml version="1.0" encoding="utf-8"?>
<!-- PROFİL BİLGİ KARTI: Kullanıcı bilgileri için glassmorphism efektli kart arka planı -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- Yarı saydam koyu arka plan - cam efekti -->
    <solid android:color="#18FFFFFF" />
    <!-- İnce parlak çerçeve -->
    <stroke android:width="1dp" android:color="#22FFFFFF" />
    <!-- Yumuşak köşe yuvarlatma -->
    <corners android:radius="16dp" />
</shape>
