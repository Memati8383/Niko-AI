<?xml version="1.0" encoding="utf-8"?>
<!-- PREMIUM PROFÄ°L KARTI: Ultra-Modern Glassmorphism -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- DEEP SHADOW / GLOW (Holographic base) -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#1A6366f1"
                android:centerColor="#0D8b5cf6"
                android:endColor="#1A00FBFF"
                android:angle="135" />
            <corners android:radius="24dp" />
        </shape>
    </item>

    <!-- MAIN GLASS BODY (Semi-transparent dark frost) -->
    <item
        android:top="1.2dp"
        android:bottom="1.2dp"
        android:left="1.2dp"
        android:right="1.2dp">
        <shape android:shape="rectangle">
            <solid android:color="#260A0A1A" />
            <corners android:radius="23dp" />
            <!-- Ultra-thin elegant border -->
            <stroke
                android:width="1dp"
                android:color="#1AFFFFFF" />
        </shape>
    </item>

    <!-- GLASS SPECULAR HIGHLIGHT (Top-left diagonal) -->
    <item
        android:top="1.2dp"
        android:left="1.2dp"
        android:right="1.2dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#1EFFFFFF"
                android:endColor="#00FFFFFF"
                android:angle="270" />
            <corners
                android:topLeftRadius="23dp"
                android:topRightRadius="23dp" />
            <size android:height="60dp" />
        </shape>
    </item>
</layer-list>