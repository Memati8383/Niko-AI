<?xml version="1.0" encoding="utf-8"?>
<!-- BOŞ DURUM: Kayıt olmadığında gösterilen arka plan -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    
    <gradient
        android:type="radial"
        android:gradientRadius="200dp"
        android:centerX="0.5"
        android:centerY="0.5"
        android:startColor="#1000FBFF"
        android:endColor="#0000FBFF" />
    
    <corners android:radius="32dp" />
    
    <stroke
        android:width="1dp"
        android:color="#0DFFFFFF"
        android:dashWidth="8dp"
        android:dashGap="4dp" />
    
</shape>
