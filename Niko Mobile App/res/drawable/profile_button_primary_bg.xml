<?xml version="1.0" encoding="utf-8"?>
<!-- PREMIUM PROFILE BUTTON: Glassmorphism with holographic stroke -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#4D6366f1" />
                    <corners android:radius="16dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <!-- Bottom Deep Glow -->
            <item android:top="8dp" android:bottom="-4dp" android:left="12dp" android:right="12dp">
                <shape android:shape="rectangle">
                    <gradient
                        android:type="radial"
                        android:gradientRadius="150%"
                        android:centerX="50%"
                        android:centerY="100%"
                        android:startColor="#266366f1"
                        android:endColor="#00000000" />
                    <corners android:radius="20dp" />
                </shape>
            </item>
            <!-- Main Glass Body -->
            <item>
                <shape android:shape="rectangle">
                    <gradient
                        android:startColor="#1AFFFFFF"
                        android:centerColor="#0DFFFFFF"
                        android:endColor="#12FFFFFF"
                        android:angle="135" />
                    <corners android:radius="16dp" />
                    <stroke
                        android:width="1.2dp"
                        android:color="#33FFFFFF" />
                </shape>
            </item>
            <!-- Glass Shine (Top) -->
            <item android:top="1dp" android:left="1dp" android:right="1dp">
                <shape android:shape="rectangle">
                    <gradient
                        android:startColor="#26FFFFFF"
                        android:endColor="#00FFFFFF"
                        android:angle="270" />
                    <corners android:topLeftRadius="15dp" android:topRightRadius="15dp" />
                    <size android:height="20dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>

