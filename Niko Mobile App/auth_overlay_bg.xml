<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Main Background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#0a0a0f" />
        </shape>
    </item>
    <!-- Purple Radial Glow (Top Left) -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="400dp"
                android:centerX="20%"
                android:centerY="20%"
                android:startColor="#266366f1"
                android:endColor="#00000000" />
        </shape>
    </item>
    <!-- Violet Radial Glow (Bottom Right) -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="400dp"
                android:centerX="80%"
                android:centerY="80%"
                android:startColor="#1A8b5cf6"
                android:endColor="#00000000" />
        </shape>
    </item>
</layer-list>
