<?xml version="1.0" encoding="utf-8"?>
<!-- AUTH EKRANI ARKA PLAN KATMANLARI: Premium ambiyans ışığı efekti (Geliştirildi) -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- ANA ARKA PLAN: Derin koyu lacivert/siyah tonu -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:startColor="#050608"
                android:endColor="#0a0c12"
                android:angle="270" />
        </shape>
    </item>
    <!-- SOL ÜST MOR IŞIMA: Zengin violet parlama -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="500dp"
                android:centerX="15%"
                android:centerY="25%"
                android:startColor="#2E6366f1"
                android:endColor="#00000000" />
        </shape>
    </item>
    <!-- SAĞ ORTA CYAN IŞIMASI: Derinlik ve renk dengesi -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="350dp"
                android:centerX="95%"
                android:centerY="50%"
                android:startColor="#1800E5FF"
                android:endColor="#00000000" />
        </shape>
    </item>
    <!-- SAĞ ALT VİYOLE IŞIMA: Karşıt köşede derinlik sağlar -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="450dp"
                android:centerX="85%"
                android:centerY="85%"
                android:startColor="#228b5cf6"
                android:endColor="#00000000" />
        </shape>
    </item>
    <!-- ORTA ALT PEMBE IŞIMA: Ekstra boyut -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="400dp"
                android:centerX="50%"
                android:centerY="95%"
                android:startColor="#14F43F5E"
                android:endColor="#00000000" />
        </shape>
    </item>
</layer-list>
