<?xml version="1.0" encoding="utf-8"?>
<!-- MODEL SEÇİM ÖĞESİ TASARIMI: Liste içerisindeki her bir model kartının görseli -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- SEÇİLİ DURUM: Model aktif olduğunda turkuaz çerçeve gösterir -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#3300E5FF"/>
            <corners android:radius="16dp"/>
            <stroke android:width="2dp" android:color="#00E5FF"/>
        </shape>
    </item>
    <!-- BASILI DURUM: Tıklandığında hafif beyaz bir parlama -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#1AFFFFFF"/>
            <corners android:radius="16dp"/>
        </shape>
    </item>
    <!-- VARSAYILAN DURUM: Yarı saydam gri kenarlık -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#0DFFFFFF"/>
            <corners android:radius="16dp"/>
            <stroke android:width="1dp" android:color="#1AFFFFFF"/>
        </shape>
    </item>
</selector>
