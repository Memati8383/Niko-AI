<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#05070A">

    <!-- TOP BAR CONTROLS -->
    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:padding="20dp">

        <ImageButton
            android:id="@+id/btnModel"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:background="@drawable/ai_response_bg"
            android:padding="12dp"
            android:scaleType="centerInside"
            android:src="@android:drawable/ic_menu_agenda"
            android:tint="#FFFFFF" />

        <!-- ANA EKRAN MODEL GSTERGES襤 -->
        <TextView
            android:id="@+id/txtMainActiveModel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="sans-serif-medium"
            android:text="Llama 3.2"
            android:textColor="#88FFFFFF"
            android:textSize="12sp"
            android:textAllCaps="true"
            android:letterSpacing="0.1"
            android:background="@drawable/ai_response_bg"
            android:paddingHorizontal="12dp"
            android:paddingVertical="4dp" />

        <ImageButton
            android:id="@+id/btnHistory"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/ai_response_bg"
            android:padding="12dp"
            android:scaleType="centerInside"
            android:src="@android:drawable/ic_menu_recent_history"
            android:tint="#FFFFFF" />

        <ImageView
            android:id="@+id/imgTopProfile"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_toStartOf="@id/btnHistory"
            android:layout_marginEnd="12dp"
            android:layout_centerVertical="true"
            android:background="@drawable/profile_avatar_bg"
            android:padding="0dp"
            android:scaleType="centerCrop"
            android:src="@android:drawable/ic_menu_myplaces"
            android:elevation="4dp"
            android:clipToOutline="true" />
    </RelativeLayout>

    <!-- CENTER SECTION (ORB) -->
    <RelativeLayout
        android:id="@+id/orbSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <View
            android:id="@+id/orbHalo"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_centerInParent="true"
            android:background="@drawable/orb_halo" />

        <View
            android:id="@+id/voiceOrb"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_centerInParent="true"
            android:background="@drawable/orb_gradient"
            android:elevation="8dp" />
    </RelativeLayout>

    <!-- AI REPLY AREA (Positioned between Top Bar and Orb) -->
    <ScrollView
        android:id="@+id/aiResponseContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/orbSection"
        android:layout_below="@id/topBar"
        android:layout_marginHorizontal="24dp"
        android:layout_marginVertical="16dp"
        android:fillViewport="true"
        android:visibility="gone"
        android:overScrollMode="never"
        android:scrollbars="none">

        <TextView
            android:id="@+id/txtAIResponse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ai_response_bg"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:lineSpacingExtra="8dp"
            android:padding="24dp"
            android:text=""
            android:textColor="#FFFFFF"
            android:textSize="17sp"
            android:elevation="4dp" />
    </ScrollView>

    <!-- BOTTOM CONTROL HUB -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="40dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:background="@drawable/ai_response_bg"
            android:elevation="4dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingHorizontal="8dp">

            <ImageButton
                android:id="@+id/btnWebSearch"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:padding="14dp"
                android:scaleType="centerInside"
                android:src="@android:drawable/ic_menu_search"
                android:tint="#44FFFFFF" />

            <View
                android:layout_width="1dp"
                android:layout_height="32dp"
                android:layout_marginHorizontal="8dp"
                android:background="#1AFFFFFF" />

            <ImageButton
                android:id="@+id/btnMic"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@drawable/mic_button"
                android:elevation="6dp"
                android:padding="14dp"
                android:scaleType="centerInside"
                android:src="@android:drawable/ic_btn_speak_now"
                android:tint="#FFFFFF" />

            <View
                android:layout_width="1dp"
                android:layout_height="32dp"
                android:layout_marginHorizontal="8dp"
                android:background="#1AFFFFFF" />

            <ImageButton
                android:id="@+id/btnStop"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:padding="14dp"
                android:scaleType="centerInside"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:tint="#44FFFFFF" />

        </LinearLayout>
    </LinearLayout>

    <!-- OVERLAYS (HISTORY & MODELS & ACCOUNT) -->
    <!-- ACCOUNT / LOGIN PANEL -->
    <LinearLayout
        android:id="@+id/layoutAccount"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/auth_overlay_bg"
        android:orientation="vertical"
        android:padding="28dp"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtAccountTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Niko AI"
                    android:textColor="#FFFFFF"
                    android:textSize="32sp"
                    android:letterSpacing="-0.02"
                    android:fontFamily="sans-serif-black" />

                <TextView
                    android:id="@+id/txtAccountSubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yapay Zeka Sohbet Asistan覺"
                    android:textColor="#a0a0b0"
                    android:textSize="14sp"
                    android:letterSpacing="0.05"
                    android:layout_marginTop="4dp"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/btnCloseAccount"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/auth_input_bg"
                android:padding="12dp"
                android:scaleType="centerInside"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:tint="#FFFFFF" />
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:overScrollMode="never"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Profile Avatar (Visible when logged in or editing) -->
                <ImageView
                    android:id="@+id/imgMainProfile"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/profile_avatar_bg"
                    android:clipToOutline="true"
                    android:elevation="6dp"
                    android:scaleType="centerCrop"
                    android:src="@android:drawable/ic_menu_myplaces"
                    android:visibility="gone" />

                <!-- Login / Register Form Fields -->
                <LinearLayout
                    android:id="@+id/layoutAccountFields"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kullan覺c覺 Ad覺"
                        android:textColor="#a0a0b0"
                        android:textSize="12sp"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="sans-serif-medium" />

                    <EditText
                        android:id="@+id/edtUsername"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/auth_input_bg"
                        android:hint="Kullan覺c覺 ad覺n覺z覺 girin"
                        android:textColorHint="#505060"
                        android:textColor="#FFFFFF"
                        android:paddingHorizontal="20dp"
                        android:inputType="text"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/txtCurrentPasswordLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mevcut ifre (Deiiklik 襤癟in)"
                        android:textColor="#a0a0b0"
                        android:textSize="12sp"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="sans-serif-medium"
                        android:visibility="gone" />

                    <EditText
                        android:id="@+id/edtCurrentPassword"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/auth_input_bg"
                        android:hint="Mevcut ifrenizi girin"
                        android:textColorHint="#505060"
                        android:textColor="#FFFFFF"
                        android:paddingHorizontal="20dp"
                        android:inputType="textPassword"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="15sp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/txtPasswordLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ifre"
                        android:textColor="#a0a0b0"
                        android:textSize="12sp"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="sans-serif-medium" />

                    <EditText
                        android:id="@+id/edtPassword"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/auth_input_bg"
                        android:hint="ifrenizi girin"
                        android:textColorHint="#505060"
                        android:textColor="#FFFFFF"
                        android:paddingHorizontal="20dp"
                        android:inputType="textPassword"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="15sp" />

                    <!-- Registration Only Fields -->
                    <LinearLayout
                        android:id="@+id/layoutRegisterExtras"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="E-posta"
                            android:textColor="#a0a0b0"
                            android:textSize="12sp"
                            android:layout_marginBottom="8dp"
                            android:fontFamily="sans-serif-medium" />

                        <EditText
                            android:id="@+id/edtEmail"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:layout_marginBottom="16dp"
                            android:background="@drawable/auth_input_bg"
                            android:hint="ornek@email.com"
                            android:textColorHint="#505060"
                            android:textColor="#FFFFFF"
                            android:paddingHorizontal="20dp"
                            android:inputType="textEmailAddress"
                            android:fontFamily="sans-serif-medium"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ad Soyad"
                            android:textColor="#a0a0b0"
                            android:textSize="12sp"
                            android:layout_marginBottom="8dp"
                            android:fontFamily="sans-serif-medium" />

                        <EditText
                            android:id="@+id/edtFullName"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:layout_marginBottom="16dp"
                            android:background="@drawable/auth_input_bg"
                            android:hint="Ad覺n覺z ve soyad覺n覺z"
                            android:textColorHint="#505060"
                            android:textColor="#FFFFFF"
                            android:paddingHorizontal="20dp"
                            android:inputType="textPersonName"
                            android:fontFamily="sans-serif-medium"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/btnSubmitAccount"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/auth_button_bg"
                        android:text="Giri Yap"
                        android:textColor="#FFFFFF"
                        android:textAllCaps="false"
                        android:fontFamily="sans-serif-bold"
                        android:textSize="16sp"
                        android:elevation="4dp" />

                    <TextView
                        android:id="@+id/btnSwitchMode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:gravity="center"
                        android:text="Hesab覺n覺z yok mu? Kay覺t Olun"
                        android:textColor="#6366f1"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif-bold"
                        android:padding="8dp" />
                </LinearLayout>

                <!-- Logged In Section -->
                <LinearLayout
                    android:id="@+id/layoutLoggedIn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:visibility="gone">



                    <TextView
                        android:id="@+id/txtLoginStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="u an giri yap覺ld覺: username"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"
                        android:fontFamily="sans-serif-black"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Niko AI ile sohbet etmeye haz覺rs覺n覺z"
                        android:textColor="#a0a0b0"
                        android:textSize="14sp"
                        android:layout_marginBottom="24dp"
                        android:fontFamily="sans-serif-medium" />

                    <Button
                        android:id="@+id/btnEditProfile"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/auth_button_bg"
                        android:text="Profili D羹zenle"
                        android:textColor="#FFFFFF"
                        android:textAllCaps="false"
                        android:fontFamily="sans-serif-bold"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/btnLogout"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@drawable/auth_secondary_button_bg"
                        android:text="Oturumu Kapat"
                        android:textColor="#ef4444"
                        android:textAllCaps="false"
                        android:fontFamily="sans-serif-bold"
                        android:textSize="16sp" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <!-- MODEL SE襤M PANEL襤 (GEL襤T襤R襤LM襤) -->
    <LinearLayout
        android:id="@+id/layoutModels"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FA05070A"
        android:orientation="vertical"
        android:padding="28dp"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Zeka Merkezi"
                    android:textColor="#FFFFFF"
                    android:textSize="32sp"
                    android:letterSpacing="-0.02"
                    android:fontFamily="sans-serif-black" />

                <TextView
                    android:id="@+id/txtCurrentModel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="u an aktif olan model"
                    android:textColor="#00E5FF"
                    android:textSize="13sp"
                    android:textAllCaps="true"
                    android:letterSpacing="0.1"
                    android:layout_marginTop="4dp"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/btnCloseModels"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/model_item_bg"
                android:padding="12dp"
                android:scaleType="centerInside"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:tint="#FFFFFF" />
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:overScrollMode="never"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/containerModelItems"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:divider="@android:color/transparent"
                android:showDividers="middle" />
        </ScrollView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Model se癟imi asistan覺n yan覺t h覺z覺n覺 ve kalitesini etkiler."
            android:textColor="#44FFFFFF"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginTop="16dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutHistory"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FA05070A"
        android:orientation="vertical"
        android:padding="28dp"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dijital Haf覺za"
                    android:textColor="#FFFFFF"
                    android:textSize="32sp"
                    android:letterSpacing="-0.02"
                    android:fontFamily="sans-serif-black" />

                <TextView
                    android:id="@+id/txtHistoryStats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 kay覺t"
                    android:textColor="#00E5FF"
                    android:textSize="13sp"
                    android:textAllCaps="true"
                    android:letterSpacing="0.1"
                    android:layout_marginTop="4dp"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/btnCloseHistory"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/model_item_bg"
                android:padding="12dp"
                android:scaleType="centerInside"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:tint="#FFFFFF" />
        </RelativeLayout>

        <EditText
            android:id="@+id/edtHistorySearch"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/model_item_bg"
            android:hint="Ge癟mite ara..."
            android:textColorHint="#44FFFFFF"
            android:textColor="#FFFFFF"
            android:paddingHorizontal="20dp"
            android:drawableStart="@android:drawable/ic_menu_search"
            android:drawablePadding="16dp"
            android:drawableTint="#88FFFFFF"
            android:inputType="text"
            android:fontFamily="sans-serif-medium"
            android:textSize="15sp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:overScrollMode="never"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/containerHistoryItems"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </ScrollView>

        <Button
            android:id="@+id/btnClearHistory"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/clear_button_bg"
            android:text="T羹m Haf覺zay覺 Temizle"
            android:textColor="#FF5252"
            android:textAllCaps="true"
            android:letterSpacing="0.05"
            android:fontFamily="sans-serif-bold"
            android:elevation="0dp"
            android:stateListAnimator="@null" />
    </LinearLayout>

</RelativeLayout>
