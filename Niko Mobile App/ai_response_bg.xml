<!-- YAPAY ZEKA YANIT ARKA PLANI: Mesaj balonunun görsel stili -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Daha koyu ve opak arka plan (Okunabilirlik için) -->
    <solid android:color="#E60B0F14"/>

    <!-- Köşe yuvarlatma (Modern görünüm) -->
    <corners android:radius="24dp"/>

    <!-- Daha belirgin cam kenarı (Stroke/Çerçeve) -->
    <stroke
        android:width="1dp"
        android:color="#33FFFFFF"/>
</shape>
