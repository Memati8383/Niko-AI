<?xml version="1.0" encoding="utf-8"?>
<!-- ADMIN/SYSTEM LOGS BUTTON: Cyber-Terminal style glassmorphism -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#4D00FBFF" />
                    <corners android:radius="16dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <!-- Cyan Deep Glow -->
            <item android:top="8dp" android:bottom="-4dp" android:left="12dp" android:right="12dp">
                <shape android:shape="rectangle">
                    <gradient
                        android:type="radial"
                        android:gradientRadius="150%"
                        android:centerX="50%"
                        android:centerY="100%"
                        android:startColor="#2600FBFF"
                        android:endColor="#00000000" />
                    <corners android:radius="20dp" />
                </shape>
            </item>
            <!-- Dark Terminal Glass Body -->
            <item>
                <shape android:shape="rectangle">
                    <gradient
                        android:startColor="#1A00FBFF"
                        android:centerColor="#0D000000"
                        android:endColor="#1200FBFF"
                        android:angle="135" />
                    <corners android:radius="16dp" />
                    <stroke
                        android:width="1.2dp"
                        android:color="#4D00FBFF" />
                </shape>
            </item>
            <!-- Terminal Shine -->
            <item android:top="1dp" android:left="1dp" android:right="1dp">
                <shape android:shape="rectangle">
                    <gradient
                        android:startColor="#1A00FBFF"
                        android:endColor="#00000000"
                        android:angle="270" />
                    <corners android:topLeftRadius="15dp" android:topRightRadius="15dp" />
                    <size android:height="15dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
