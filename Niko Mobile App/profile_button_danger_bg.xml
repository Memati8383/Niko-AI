<?xml version="1.0" encoding="utf-8"?>
<!-- OTURUM KAPAT BUTONU: Kırmızı tonda tehlike/çıkış butonu -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- BASILI DURUM -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#33F43F5E" />
            <stroke android:width="1.5dp" android:color="#F43F5E" />
            <corners android:radius="16dp" />
        </shape>
    </item>
    <!-- VARSAYILAN DURUM -->
    <item>
        <shape android:shape="rectangle">
            <!-- Şeffaf arka plan, sadece çerçeve -->
            <solid android:color="#00000000" />
            <stroke android:width="1.5dp" android:color="#4DF43F5E" />
            <corners android:radius="16dp" />
        </shape>
    </item>
</selector>
